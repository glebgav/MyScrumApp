<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myscrumapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_myscrum_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_myscrum_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyScrumApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.SignUpActivity" />
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyScrumApp.NoActionBar"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>